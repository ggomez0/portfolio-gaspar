---
interface Props {
	title: string;
	href: string;
	descripcion: string;
    image: any
}

const { href, title, descripcion, image } = Astro.props;

---

    <li class="link-card flex list-none bg-slate-800 text-white rounded-xl">
        <a href={href} target="_blank" class=" leading-6 opacity-80 p-[calc(1.5rem-1px)] no-underline text-white rounded-xl">
            <img class="m-auto" src={image} width="300px" height="300px">
            <h2 class="text-center font-bold text-2xl text-white">
                {title}
            </h2>
            <p class="text-center m-auto text-sm text-wrap w-64 ">{descripcion}</p>
        </a>
    </li>